 <% if place.favorited_by?(current_user) %>
          <%= link_to user_place_favorite_path(place), method: :delete, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= place.favorites.count %>
          <% end %>

        <% else %>
            <%= link_to user_place_favorites_path(place), method: :post, remote: true do %>
              <i class="far fa-heart" aria-hidden="true"></i>
              <%= place.favorites.count %>
            <% end %>
        <% end %>